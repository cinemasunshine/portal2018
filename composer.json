{
    "name": "cinemasunshine/portal2018-frontend",
    "description": "Cinemasunshine Portal2018 Frontend",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "repositories": {
        "cinemasunshine/schedule": {
            "type": "git",
            "url":  "https://m-p.backlog.jp/git/SASAKI/schedule.git"
        },
        "cinemasunshine/portal2018-orm": {
            "type": "vcs",
            "url": "https://github.com/cinemasunshine/portal2018-orm.git"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "~7.3",
        "ext-redis": "*",
        "slim/slim" : "^3.12",
        "slim/twig-view": "^2.5",
        "vlucas/phpdotenv": "^3.6",
        "monolog/monolog": "^2.1",
        "doctrine/orm": "^2.7.4",
        "cinemasunshine/portal2018-orm": "^1.2",
        "cinemasunshine/schedule": "2.7.0",
        "microsoft/azure-storage-blob": "^1.5",
        "laminas/laminas-session": "^2.9",
        "guzzlehttp/guzzle": "^6.5",
        "symfony/console": "^4.4",
        "symfony/filesystem": "^4.4",
        "blue32a/monolog-azure-blob": "^0.2",
        "twig/string-extra": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12.50",
        "phpstan/phpstan-doctrine": "^0.12.20",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-mockery": "^0.12.7",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "mp-okui/php-coding-standard": "v0.2.0-alpha"
    },
    "scripts": {
        "phplint": "vendor/bin/parallel-lint --no-progress --exclude vendor --exclude cache .",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon --memory-limit=256M",
        "phpunit": "vendor/bin/phpunit"
    }
}
