{
    "name": "cinemasunshine/portal2018-frontend",
    "description": "Cinemasunshine Portal2018 Frontend",
    "type": "project",
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "git",
            "url":  "https://m-p.backlog.jp/git/SASAKI/schedule.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cinemasunshine\\Portal\\": "src/"
        }
    },
    "require": {
        "php": "~7.2",
        "ext-redis": "*",
        "slim/slim" : "^3.12",
        "slim/twig-view": "^2.5",
        "twig/extensions": "^1.5",
        "vlucas/phpdotenv": "^2.5",
        "monolog/monolog": "^1.23",
        "doctrine/orm": "2.6.*",
        "cinemasunshine/schedule": "2.2.0",
        "microsoft/azure-storage-blob": "^1.2",
        "zendframework/zend-session": "^2.8",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpstan/phpstan": "^0.11.8"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon"
    }
}
