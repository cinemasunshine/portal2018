{% extends '4dx_screen/layout.html.twig' %}

{% set title = schedule.getTitle() %}

{% block title %}{{ title.getName() }} | シネマサンシャイン4DX SCREEN特設サイト{% endblock %}

{% block description %}シネマサンシャイン4DX SCREEN特設サイトの作品紹介ページです。「{{ title.getName() }}」の作品情報の詳細はこちら{% endblock %}

{% block keywords %}4DX SCREEN,グランドシネマサンシャイン,映画館,映画,シネマ,池袋,{{ title.getName() }},{{ title.getDirector()|replace({'、': ','}) }},{{ title.getCast()|replace({'、': ','}) }},4DX SCREEN{% endblock %}

{% block css %}
<link href="/css/movie/details.css" rel="stylesheet">
{% endblock %}

{% block navbar %}
{% include '4dx_screen/include/navbar.html.twig' with {
    active: 'title'
} only %}
{% endblock %}

{% block sp_navbar %}
{% include '4dx_screen/include/sp_navbar.html.twig' with {
    active: 'title'
} only %}
{% endblock %}

{% block contents %}
<div class="breadcrumb-list d-none d-md-block small width mx-auto mb-5 px-2 text-white">
    <a class="text-white" href="{{ path_for('homepage') }}">ホーム</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('4dx_screen') }}">4DX SCREEN</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('4dx_screen_schedule_list') }}">作品一覧</a>
    <span class="font-weight-bold mx-2"> | </span>
    <span>{{ title.getName() }}<span>
</div>

{% include '4dx_screen/schedule/include/show_detail.html.twig' with {
    schedule: schedule,
    theaters: theaters,
} only %}

{% set campaigns = schedule.getTitle().getCampaigns() %}
{% if campaigns|length > 0 %}
<div class="mb-5 py-5 text-white bg-black">
    {% include '4dx_screen/include/campaign.html.twig' with {
        campaigns: campaigns
    } only %}
</div>
{% endif %}

<div class="px-3">
    <div class="back-list button-01 shadow-01 mx-auto mb-5">
        <a href="{{ path_for('4dx_screen_schedule_list') }}" class="text-white">一覧へ戻る</a>
    </div>
</div>

{% if newsList %}
<div class="py-5 text-white">
    <div class="width mx-auto px-3 news">
        <h3 class="font-weight-bold large mb-4 text-center text-md-left line-height-1">ニュース<br><span class="small">NEWS</span></h3>
        <div class="container w-100 mw-100 m-0 mb-4 px-1">
            <ul class="row mb-0">
            {% for news in newsList|slice(0, 4) %}
                <li class="col-md-3 col-6 py-2 mb-4">
                    <a href="{{ path_for('schedule_news_show', {schedule: schedule.getId(), news: news.getId()}) }}" class="d-block">
                    {% if news.getImage() %}
                        <div class="border mb-2 image border-gray" style="background-image: url({{ file_url(news.getImage()) }})"></div>
                    {% endif %}
                        <p class="mb-0">{{ news.getHeadline() }}</p>
                    </a>
                </li>
            {% endfor %}
            </ul>

            <ul class="row d-none" data-contents="more-contents">
            {% for news in newsList|slice(4, 4) %}
                <li class="col-md-3 col-6 py-2 mb-4">
                    <a href="{{ path_for('schedule_news_show', {schedule: schedule.getId(), news: news.getId()}) }}" class="d-block">
                    {% if news.getImage() %}
                        <div class="border mb-2 image border-gray" style="background-image: url({{ file_url(news.getImage()) }})"></div>
                    {% endif %}
                        <p class="mb-0">{{ news.getHeadline() }}</p>
                    </a>
                </li>
            {% endfor %}
            </ul>
        </div>

        <div class="button-01 mx-auto see-more">
            <a class="bg-r-yellow text-black" href="#" data-target-contents="more-contents" data-target-button="more-button">もっと見る</a>
        </div>
        <div class="button-01 mx-auto d-none list-display" data-button="more-button">
            <a class="bg-r-yellow text-black" href="{{ path_for('schedule_news', {schedule: schedule.getId()}) }}">一覧表示</a>
        </div>
    </div>
</div>
{% endif %}

{% endblock %}
