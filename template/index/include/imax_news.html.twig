<div class="width mx-auto mb-5 px-3 news news-imax">
    <div class="d-md-flex mb-4 align-items-end">
        <h3 class="text-center text-md-left mb-3 mb-md-0">
            <div class="mr-md-2 d-inline-block"><img src="/images/common/imax_logo.svg"></div>
            <div class="font-weight-bold large d-inline-block line-height-1">ニュース</div>
        </h3>
        <div class="ml-md-5 text-center"><a href="{{ path_for('imax') }}" class="border-bottom border-gray">IMAX特設サイトはこちら
                >
            </a></div>
    </div>
    <div class="container w-100 mw-100 m-0 mb-4 px-1">
        <ul class="row mb-0">
        {% for news in newsList|slice(0, 4) %}
            <li class="col-md-3 col-6 py-2 mb-4">
                <a href="{{ path_for('news_show', { id: news.getId() }) }}" class="d-block">
                    <div class="border mb-2 image border-gray" style="background-image: url({{ file_url(news.getImage()) }})"></div>
                    <p class="mb-0">{{ news.getHeadline() }}</p>
                </a>
            </li>
        {% endfor %}
        </ul>
        
        <ul class="row d-none" data-contents="imax-more-contents">
        {% for news in newsList|slice(4, 4) %}
            <li class="col-md-3 col-6 py-2 mb-4">
                <a href="{{ path_for('news_show', { id: news.getId() }) }}" class="d-block">
                    <div class="border mb-2 image border-gray" style="background-image: url({{ file_url(news.getImage()) }})"></div>
                    <p class="mb-0">{{ news.getHeadline() }}</p>
                </a>
            </li>
        {% endfor %}
        </ul>
    </div>
    <div class="button-01 shadow-01 mx-auto see-more">
        <a href="#" data-target-contents="imax-more-contents" data-target-button="imax-more-button">もっと見る</a>
    </div>
    <div class="button-01 shadow-01 mx-auto d-none list-display" data-button="imax-more-button">
        <a href="{{ path_for('news_list') }}">一覧表示</a>
    </div>
</div>