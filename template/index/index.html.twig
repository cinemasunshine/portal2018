{% extends "layout.html.twig" %}

{% block css %}
<link href="/css/top.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/top.js"></script>
{{ mw_ad_script(page) }}
{% endblock %}

{% block contents %}
<div class="mb-3">
    {% include 'index/include/slider.html.twig' with {
        mainBanners: mainBanners
    } only %}
</div>

<div class="bg-light-gray mb-5">
    <h3 class="width mx-auto d-md-block d-none pt-4 px-3 line-height-1 font-weight-bold large">劇場一覧<br>
    <span class="small">THEATER</span></h3>
    <div class="width mx-auto d-md-flex py-4 px-3">
        <div class="region-selection-sp mb-4 plus-button d-md-none">
            <a href="#">
                <div>劇場一覧</div>
            </a>
        </div>
        {% include 'index/include/theater_list.html.twig' with {
            areaToTheaters: areaToTheaters
        } only %}

        {% include 'index/include/trailer.html.twig' with {
            page: page
        } only %}
    </div>
</div>

{% include 'index/include/ranking.html.twig' with {
    titleRanking: titleRanking
} only %}

<div class="mb-5">
    {% include 'index/include/news.html.twig' with {
        newsList: newsList
    } only %}
</div>

{% include 'index/include/imax_news.html.twig' with {
    newsList: imaxNewsList
} only %}

{% include 'index/include/4dx_news.html.twig' with {
    newsList: fourdxNewsList
} only %}

{% include 'include/campaign.html.twig' with {
    campaigns: campaigns
} only %}

<div class="mb-5">
    {% include 'index/include/infomation.html.twig' with {
        newsList: infoNewsList
    } only %}
</div>

<div>
    {% include 'index/include/special_site.html.twig' only %}
</div>
{% endblock %}
