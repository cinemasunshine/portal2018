{% extends "4dx/layout.html.twig" %}

{% block css %}
<link href="/css/news/details.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/news/details.js"></script>
{% endblock %}

{% block navbar %}
{% include '4dx/include/navbar.html.twig' with {
    active: 'news'
} only %}
{% endblock %}

{% block contents %}
<div class="breadcrumb-list d-none d-md-block small details-width mx-auto mb-5 px-2 text-white">
    <a class="text-white" href="{{ path_for('homepage') }}">ホーム</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('4dx') }}">4dx</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('4dx_news_list') }}">NEWS & INFO</a>
    <span class="font-weight-bold mx-2"> | </span>
    <span>{{ news.getHeadline()|truncate(34, false, '…') }}<span>
</div>

<div class="details-width mx-auto mb-3 px-2 text-white">
    <div class="d-flex align-items-center">
        <div class="text-gray">{{ news.getStartDt()|date('Y/n/j') }}</div>
    </div>
    
    <h2 class="font-weight-bold x-large py-4" id="shareTitle">{{ news.getHeadline() }}</h2>
    <div class="mb-5">
        <img id="shareImage" class="w-100" src="{{ file_url(news.getImage()) }}">
    </div>
    
    <div class="mb-3 border-bottom border-gray ">
        {{ news.getBody()|raw }}
    </div>
    <div class="d-flex justify-content-end mb-5">
        <div class="news-share small">この記事をシェア：</div>
        <div class="ml-4"><a class="fb-share d-block" href="#" target="_blank"><img src="/images/common/sns_fb.svg" class="w-100"></a></div>
        <div class="mx-4"><a class="twitter-share d-block" href="#" target="_blank"><img src="/images/common/sns_twitter.svg"
                    class="w-100"></a></div>
        <div><a class="line-share d-block" href="#" target="_blank"><img src="/images/common/sns_line.svg" class="w-100"></a></div>
    </div>

    <div class="black-button shadow-01 mx-auto">
        <a href="{{ path_for('4dx_news_list') }}">一覧に戻る</a>
    </div>

</div>
{% endblock %}