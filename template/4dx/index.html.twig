{% extends "4dx/layout.html.twig" %}

{% block title %}{{ meta_title('4dx_theater') }}{% endblock %}

{% block description %}{{ meta_description('4dx_theater') }}{% endblock %}

{% block keywords %}{{ meta_keywords('4dx_theater') }}{% endblock %}

{% block css %}
<link href="/css/4dx/top.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/4dx/top.js"></script>
{% endblock %}

{% block navbar %}
{% include '4dx/include/navbar.html.twig' with {
    active: 'top'
} only %}
{% endblock %}

{% block sp_navbar %}
{% include '4dx/include/sp_navbar.html.twig' with {
    active: 'top'
} only %}
{% endblock %}

{% block contents %}
<div class="breadcrumb-list d-none d-md-block small width mx-auto mb-3 px-2 text-white">
    <a class="text-white" href="{{ path_for('homepage') }}">ホーム</a>
    <span class="font-weight-bold mx-2"> | </span>
    <span>4DX<span>
</div>

<div class="mb-3">
    {% include '4dx/include/index/slider.html.twig' with {
        mainBanners: mainBanners
    } only %}
</div>
{% include 'include/adsense/movie-top.html.twig' only %}
<div class="pt-3 pb-5 text-white">
    <div class="width mx-auto px-3 film">
        <div class="d-md-flex">
            <div class="about mb-5 mb-md-0">
                <div class="mr-md-4">
                    <h3 class="font-weight-bold large mb-4 text-center text-md-left line-height-1">
                        <div class="mb-2">絶対的な映画体験「4DX」</div>
                        <div class="small">ABOUT 4DX</div>
                    </h3>
                    <div class="mb-3"><img class="w-100" src="/images/4dx/about/4dx_about_main_03.jpg"></div>
                    <div class="button-01 mx-auto px-3 px-md-5">
                        <a class="bg-dark-red text-white" href="{{ path_for('4dx_about') }}">4DXとは？</a>
                    </div>
                </div>
            </div>

        {% set trailer = trailers[0] %}
        {% if trailer %}
            {% include '4dx/include/index/trailer.html.twig' with {
                trailer: trailer
            } only %}
        {% endif %}
        </div>
    </div>
</div>
{% include '4dx/include/adsense/top.html.twig' only %}
{% include '4dx/include/index/news.html.twig' with {
    newsList: newsList
} only %}

<div class="width mx-auto my-3 px-3 link_bnr_4dxwscx">
    <a href="{{ path_for('4dx_screen') }}"><img src="/images/tmp/common/4dxwscx-top_bnr.jpg"  class="w-100"></a>
</div>

<div class="py-5 text-white">
    {% include '4dx/include/index/title.html.twig' with {
        theaters: theaters,
        nowShowingSchedules: nowShowingSchedules,
        commingSoonSchedules: commingSoonSchedules,
    } only %}
</div>

{% include 'include/adsense/theater-top-schedule.html.twig' only %}

{% if campaigns|length > 0 %}
<div class="py-5 text-white bg-black">
    {% include '4dx/include/campaign.html.twig' with {
        campaigns: campaigns
    } only %}
</div>
{% endif %}

{% include '4dx/include/index/infomation.html.twig' with {
    newsList: infoNewsList
} only %}
{% endblock %}
