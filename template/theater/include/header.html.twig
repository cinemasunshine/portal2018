{% extends "include/header.html.twig" %}

{% block logo %}
<div class="header-company-logo mr-3 mb-1">
    <img src="/images/common/header_logo.svg" class="w-100">
</div>

<div class="align-items-center d-flex">
    <div class="theater-name font-weight-bold mr-md-4 mr-3 line-height-1">
        <a class="d-block" href="{{ path_for('theater', { name: theater.getName() }) }}">{{ theater.getNameJa() }}</a>
    </div>
    
{% for specialSite in theater.getSpecialSites() %}
    {% if specialSite.getId() == 1 %}
        <div class="header-imax mr-md-2 mr-2 line-height-1"><img src="/images/common/imax_logo.svg" class="w-100"></div>
    {% elseif specialSite.getId == 2 %}
        <div class="header-4dx line-height-1"><img src="/images/common/4dx_logo.svg" class="w-100"></div>
    {% endif %}
{% endfor %}
</div>
{% endblock %}

{% block sns %}
{% set meta = theater.getMeta() %}
{% if meta.getFacebook() %}
<div class="pr-3 mr-3 border-right d-none d-md-block">
    <a class="d-block" href="{{ facebook(meta.getFacebook()) }}" target="_blank"><img src="/images/common/sns_fb.svg" width="25"></a>
</div>
{% endif %}

{% if meta.getTwitter() %}
<div class="mr-2">
    <a class="d-block" href="{{ twitter(meta.getTwitter()) }}" target="_blank"><img src="/images/common/sns_twitter.svg" width="25"></a>
</div>
{% endif %}
{% endblock %}