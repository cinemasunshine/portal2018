{% extends "theater/layout.html.twig" %}

{% set title = 'アクセス | シネマサンシャイン' ~ theater.getNameJa() %}
{% set description = 'シネマサンシャイン' ~ theater.getNameJa() ~ 'のアクセスページです。劇場周辺のマップや最寄駅、住所、問い合わせ先電話番号に関するご案内など' %}
{% set keywords = 'シネマサンシャイン,映画館,映画,シネマ,劇場,駐車場,アクセス,電話番号,マップ,行き方,電車,車,徒歩,最寄駅,' ~ theater_meta_keywords(theater) %}

{% if theater.getName() == 'gdcs' %}
    {# SASAKI-579 #}
    {% set title = 'アクセス | グランドシネマサンシャイン池袋'%}
    {% set description = 'グランドシネサンシャイン池袋のアクセスページです。映画館周辺のマップや最寄駅、住所、問い合わせ先電話番号に関するご案内など' %}
    {% set keywords = 'グランドシネマサンシャイン,キュープラザ池袋,映画館,映画,シネマ,劇場,駐車場,アクセス,電話番号,マップ,行き方,電車,車,徒歩,最寄駅JR池袋駅,東京メトロ池袋駅,西武池袋線池袋駅,東武東上線池袋駅,東京,池袋' %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block description %}{{ description }}{% endblock %}

{% block keywords %}{{ keywords }}{% endblock %}

{% block css %}
<link href="/css/theater/access.css" rel="stylesheet">
    {% if theater.getName() == 'gdcs' %}
    <link href="/css/theater/gdcs.css" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block navbar %}
{% include 'theater/include/navbar.html.twig' with {
    theater: theater,
    active: 'access',
} only %}
{% endblock %}

{% block contents %}
<div class="width mx-auto p-3 pjack-bg pj-mb-5">
    <div class="breadcrumb-list small mb-5 d-none d-md-block">
        <a href="{{ path_for('theater', { name: theater.getName() }) }}" class="mr-3">ホーム | {{ theater.getNameJa() }}</a>|
        <span class="font-weight-bold mx-3">アクセス</span>
    </div>

    {% include 'theater/include/access/' ~ theater.getName() ~ '.html.twig' only %}
</div>

{% include 'theater/include/infomation.html.twig' with {
    theater: theater,
    newsList: infoNewsList,
} only %}
{% endblock %}
