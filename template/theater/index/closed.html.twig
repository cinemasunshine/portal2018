{% extends "theater/layout.html.twig" %}


{% block title %}劇場トップ・上映スケジュール | {{ parent() }}{% endblock %}

{% block description %}シネマサンシャイン{{ theater.getNameJa()
}}の劇場サイトトップページです。上映スケジュール、ニュース、前売券情報、コンセッション、料金案内、劇場設備、アクセスのご案内など。{% endblock %}

{% set keywords = theater_meta_keywords(theater) %}

{% if theater.getId() == 1 %}
{# 池袋トップページのみ #}
{% set keywords = keywords ~ ',応援上映' %}
{% elseif theater.getId() == 2 %}
{# 平和島トップページのみ #}
{% set keywords = keywords ~ ',4DX' %}
{% endif %}

{% block keywords %}{{ parent()}},座席指定,予約,オンライン,上映,スケジュール,キャンペーン,公式アプリ,ムビチケ{% if keywords %},{{ keywords }}{% endif
%}{% endblock %}

{% block css %}
<link href="/css/theater/top.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/api.js"></script>
<script src="/js/theater/top.js?v=20181227"></script>
{% endblock %}

{% block navbar %}
{% include 'theater/include/navbar.html.twig' with {
theater: theater,
active: 'top',
} only %}
{% endblock %}

{% block sp_navbar %}
{% include 'theater/include/sp_navbar.html.twig' with {
theater: theater,
active: 'top',
} only %}
{% endblock %}

{% block contents %}
<div class="mb-3">
    {% include 'theater/index/include/slider.html.twig' with {
    mainBanners: mainBanners
    } only %}
</div>

{% set specialSites = theater.getSpecialSites() %}
{% if specialSites|length > 0 %}
{% include 'theater/index/include/special_site.html.twig' with {
specialSites: specialSites
} only %}
{% endif %}

{% include 'include/adsense/top.html.twig' only %}

{% include 'theater/include/infomation.html.twig' with {
theater: theater,
newsList: infoNewsList,
} only %}

{% include 'theater/index/include/sp_links.html.twig' with {
    theater: theater
} only %}

{% include 'theater/index/include/app_modal.html.twig' only %}
{% endblock %}