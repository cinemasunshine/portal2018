{% extends "theater/layout.html.twig" %}


{% set title = '劇場トップ・上映スケジュール | シネマサンシャイン' ~ theater.getNameJa() %}
{% set description = 'シネマサンシャイン' ~ theater.getNameJa() ~ 'の劇場サイトトップページです。上映スケジュール、ニュース、前売券情報、コンセッション、料金案内、劇場設備、アクセスのご案内など。' %}
{% set keywords = 'シネマサンシャイン,映画館,映画,シネマ,劇場,座席指定,予約,オンライン,上映,スケジュール,キャンペーン,公式アプリ,ムビチケ,' ~ theater_meta_keywords(theater) %}

{% block title %}{{ title }}{% endblock %}

{% block description %}{{ description }}{% endblock %}

{% block keywords %}{{ keywords }}{% endblock %}

{% block css %}
<link href="/css/theater/top.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/api.js"></script>
<script src="/js/theater/top.js?v=20190726"></script>
{% endblock %}

{% block navbar %}
{% include 'theater/include/navbar.html.twig' with {
theater: theater,
active: 'top',
} only %}
{% endblock %}

{% block sp_navbar %}
{% include 'theater/include/sp_navbar.html.twig' with {
theater: theater,
active: 'top',
} only %}
{% endblock %}

{% block contents %}
<div class="mb-3">
    {% include 'theater/index/include/slider.html.twig' with {
    mainBanners: mainBanners
    } only %}
</div>

{% set specialSites = theater.getSpecialSites() %}
{% if specialSites|length > 0 %}
{% include 'theater/index/include/special_site.html.twig' with {
specialSites: specialSites
} only %}
{% endif %}

{% include 'include/adsense/top.html.twig' only %}

{% include 'theater/include/infomation.html.twig' with {
theater: theater,
newsList: infoNewsList,
} only %}

{% include 'theater/index/include/sp_links.html.twig' with {
    theater: theater
} only %}

{% include 'theater/index/include/app_modal.html.twig' only %}
{% endblock %}
