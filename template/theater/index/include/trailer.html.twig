<div class="trailer mx-auto mx-md-0">
    <div class="trailer-inner">
        <div class="video-box">
            <div class="video">
                <iframe id="ytplayer" type="text/html" width="336" height="189"
                    src="https://www.youtube.com/embed/{{ trailer.getYoutube() }}?rel=0&loop=1&playsinline=1&rel=0&mute=1&autoplay=1&showinfo=0&disablekb=1&modestbranding=1&fs=1&color=white"
                    frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="banner">
                <a href="{{ trailer.getBannerLinkUrl() }}" target="_blank">
                    <img src="{{ file_url(trailer.getBannerImage()) }}">
                </a>
            </div>
        </div>
    </div>
</div>