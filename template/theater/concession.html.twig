{% extends "theater/layout.html.twig" %}

{% set metasKey = 'theater_' ~ theater.getName() ~ '_concession' %}
{% block title %}{{ meta_title(metasKey) }}{% endblock %}

{% block description %}{{ meta_description(metasKey) }}{% endblock %}

{% block keywords %}{{ meta_keywords(metasKey) }}{% endblock %}

{% block css %}
<link href="/css/movie/list.css" rel="stylesheet">
{% endblock %}

{% block javascript %}
<script src="/js/theater/concession.js"></script>
{% endblock %}

{% block navbar %}
{% include 'theater/include/navbar.html.twig' with {
    theater: theater,
    active: 'concession',
} only %}
{% endblock %}

{% block sp_navbar %}
{% include 'theater/include/sp_navbar.html.twig' with {
    theater: theater,
    active: 'concession',
} only %}
{% endblock %}

{% block contents %}
<div class="width mx-auto p-3 pjack-bg pj-mb-5">
    <div class="breadcrumb-list small mb-5 d-none d-md-block">
        <a href="{{ path_for('theater', { name: theater.getName() }) }}" class="mr-3">ホーム | {{ theater.getNameJa() }}</a>|
        <span class="font-weight-bold mx-3">コンセッション</span>
    </div>

    <div class="mb-5">
        <h2 class="font-weight-bold large text-center text-md-left mb-4 mt-2">コンセッション</h2>
        {% include 'theater/include/concession/' ~ theater.getName() ~ '.html.twig' only %}
    </div>
</div>

{% include 'include/campaign.html.twig' with {
    campaigns: campaigns
} only %}

{% include 'theater/include/infomation.html.twig' with {
    theater: theater,
    newsList: infoNewsList,
} only %}
{% endblock %}
