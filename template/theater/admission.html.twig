{% extends "theater/layout.html.twig" %}

{% set title = '料金案内 | シネマサンシャイン' ~ theater.getNameJa() %}
{% set description = 'シネマサンシャイン' ~ theater.getNameJa() ~ 'の料金案内ページです。一般や学生・幼児・シニアなどの通常鑑賞料金やお得に映画が観れるサービスデイ・割引料金のご案内など' %}
{% set keywords = 'シネマサンシャイン,映画館,映画,シネマ,劇場,サービスデイ,料金,ハンディキャップ,割引,レディース,レイトショー,3D,幼児,一般,大人,子供,高校生,中学生,小学生,大学生,シニア,' ~ theater_meta_keywords(theater) %}

{% if theater.getName() == 'gdcs' %}
    {# SASAKI-579 #}
    {% set title = '料金案内 | グランドシネマサンシャイン池袋'%}
    {% set description = 'グランドシネサンシャイン池袋の料金案内ページです。一般や学生・幼児・シニアなどの通常鑑賞料金、IMAXレーザー、４DX、SCREEN X(スクリーンX)、4DX SCREEN(4DXスクリーン)、BESTIA(ベスティア)の各鑑賞料金やお得に映画が観れるサービスデイ・割引料金のご案内など' %}
    {% set keywords = 'グランドシネマサンシャイン,映画館,映画,シネマ,劇場,サービスデイ,料金,ハンディキャップ,割引,レディースデイ,ファーストデイ,レイトショー,3D,幼児,一般,大人,子供,高校生,中学生,小学生,大学生,シニア,夫婦50割引,シネマサンシャインデイ,IMAXレーザー,４DX,SCREEN X(スクリーンX),4DX SCREEN(4DXスクリーン),BESTIA(ベスティア),東京,池袋' %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block description %}{{ description }}{% endblock %}

{% block keywords %}{{ keywords }}{% endblock %}

{% block css %}
<link href="/css/theater/access.css" rel="stylesheet">
    {% if theater.getName() == 'gdcs' %}
    <link href="/css/theater/gdcs.css" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block navbar %}
{% include 'theater/include/navbar.html.twig' with {
    theater: theater,
    active: 'admission',
} only %}
{% endblock %}

{% block contents %}
<div class="width mx-auto p-3 pjack-bg pj-mb-5">
    <div class="breadcrumb-list small mb-5 d-none d-md-block">
        <a href="{{ path_for('theater', { name: theater.getName() }) }}" class="mr-3">ホーム | {{ theater.getNameJa() }}</a>|
        <span class="font-weight-bold mx-3">料金案内</span>
    </div>

    <div class="mb-5">
        <h2 class="font-weight-bold large text-center text-md-left mb-4 mt-2">料金案内</h2>

        {% include 'theater/include/admission/' ~ theater.getName() ~ '.html.twig' with {
            theater: theater,
        } only %}
    </div>
</div>

{% include 'include/campaign.html.twig' with {
    campaigns: campaigns
} only %}
{% endblock %}
