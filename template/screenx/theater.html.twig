{% extends "screenx/layout.html.twig" %}

{% block title %}劇場情報 | {{ parent() }}SCREEN X特設サイト{% endblock %}

{% block description %}シネマサンシャインのSCREEN X特設サイト劇場情報ページです。SCREEN Xを導入している劇場に関するご案内など{% endblock %}

{% block keywords %}{{ parent() }},SCREEN X{% endblock %}

{% block css %}
<link href="/css/theaters.css" rel="stylesheet">
{% endblock %}

{% block navbar %}
{% include 'screenx/include/navbar.html.twig' with {
    active: 'theater'
} only %}
{% endblock %}

{% block sp_navbar %}
{% include 'screenx/include/sp_navbar.html.twig' with {
    active: 'theater'
} only %}
{% endblock %}

{% block contents %}
<div class="breadcrumb-list d-none d-md-block small width mx-auto mb-5 px-2 text-white">
    <a class="text-white" href="{{ path_for('homepage') }}">ホーム</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('screenx') }}">SCREEN X</a>
    <span class="font-weight-bold mx-2"> | </span>
    <span>劇場情報<span>
</div>

<div class="width mx-auto mb-3 px-2 text-white">
    <h2 class="font-weight-bold large text-center text-md-left py-4">劇場情報</h2>
    <ul>
    {% for theater in theaters %}
        {# 追加漏れが分かりやすいようにignore missingは入れない #}
        {% include 'screenx/include/theater/' ~ theater.getName() ~ '.html.twig' with {
            theater: theater,
        } only %}
    {% endfor %}
    </ul>
</div>
{% endblock %}