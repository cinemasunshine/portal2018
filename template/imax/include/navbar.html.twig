{% set activeClass = 'active' %}
{% set disnoneClass = 'disabled' %}

{% if active == 'top' %}
{% set topClass = activeClass %}
{% set tabClass = disnoneClass %}

{% elseif active == 'about' %}
{% set aboutClass = activeClass %}
{% set tabClass = activeClass %}

{% elseif active == 'title' %}
{% set titleClass = activeClass %}
{% set tabClass = disnoneClass %}

{% elseif active == 'news' %}
{% set newsClass = activeClass %}
{% set tabClass = disnoneClass %}

{% elseif active == 'theater' %}
{% set theaterClass = activeClass %}
{% set tabClass = disnoneClass %}

{% endif %}

<div class="sub-header mb-3 d-md-block d-none">
    <div class="sub-header-inner">
        <ul class="d-flex justify-content-center text-center mb-0 mx-auto small">
            <li class="d-flex {{ topClass }}">
                <a class="py-3 d-flex align-items-center justify-content-center w-100" href="{{ path_for('imax') }}">
                    <div>
                        <div class="mb-1">TOP</div>
                        <div class="x-small">TOP</div>
                    </div>
                </a>
            </li>
            <li class="d-flex {{ aboutClass }}">
                <a class="py-3 d-flex align-items-center justify-content-center w-100" href="{{ path_for('imax_about') }}">
                    <div>
                        <div class="mb-1">IMAXとは？</div>
                        <div class="x-small">ABOUT IMAX</div>
                    </div>
                </a>
            </li>
            <li class="d-flex {{ titleClass }}">
                <a class="py-3 d-flex align-items-center justify-content-center w-100" href="{{ path_for('imax_schedule_list') }}">
                    <div>
                        <div class="mb-1">作品一覧</div>
                        <div class="x-small">MOVIE</div>
                    </div>
                </a>
            </li>
            <li class="d-flex {{ newsClass }}">
                <a class="py-3 d-flex align-items-center justify-content-center w-100" href="{{ path_for('imax_news_list') }}">
                    <div>
                        <div class="mb-1">NEWS & INFO</div>
                        <div class="x-small">NEWS&INFORMATION</div>
                    </div>
                </a>
            </li>
            <li class="d-flex {{ theaterClass }}">
                <a class="py-3 d-flex align-items-center justify-content-center w-100" href="{{ path_for('imax_theater') }}">
                    <div>
                        <div class="mb-1">劇場情報</div>
                        <div class="x-small">THEATER</div>
                    </div>
                </a>
            </li>
        </ul>
    </div>
</div>

<div style="height:56px;" class="mb-3 {{ tabClass }}">
    <div class="imax_about_tab" role="tablist" >
        <div class="imax_about_tab_inner">
            <ul class="tab-group d-flex justify-content-center text-center mb-0 mx-auto nav small">
                <li class="nav-item">
                    <a href="#dg_teater" data-toggle="tab" role="tab" class="active" aria-controls="dg_teater">IMAX®<br class="d-md-none">デジタルシアター</a>
                </li>
                <li class="nav-item">
                    <a href="#laser" data-toggle="tab" role="tab" aria-controls="laser">IMAX®<br class="d-md-none">レーザー</a>
                </li>
                <li class="nav-item">
                    <a href="#laser_gt" data-toggle="tab" role="tab" aria-controls="laser_gt">IMAX®レーザー/<br class="d-md-none">GTテクノロジー</a>
                </li>
            </ul>
        </div>
    </div>
</div>
