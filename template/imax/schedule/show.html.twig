{% extends "imax/layout.html.twig" %}

{% set title = schedule.getTitle() %}

{% block title %}{{ title.getName() }} | {{ parent() }}IMAX特設サイト{% endblock %}

{% block description %}シネマサンシャインIMAX特設サイトの作品紹介ページです。「{{ title.getName() }}」の作品情報の詳細はこちら{% endblock %}

{% block keywords %}{{ parent()}},{{ title.getName() }},{{ title.getDirector()|replace({'、': ','}) }},{{ title.getCast()|replace({'、': ','}) }},IMAX,IMAX3D,{% endblock %}

{% block css %}
<link href="/css/movie/details.css" rel="stylesheet">
{% endblock %}

{% block navbar %}
{% include 'imax/include/navbar.html.twig' with {
    active: 'title'
} only %}
{% endblock %}

{% block contents %}
<div class="breadcrumb-list d-none d-md-block small width mx-auto mb-5 px-2 text-white">
    <a class="text-white" href="{{ path_for('homepage') }}">ホーム</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('imax') }}">IMAX</a>
    <span class="font-weight-bold mx-2"> | </span>
    <a class="text-white" href="{{ path_for('imax_schedule_list') }}">作品一覧</a>
    <span class="font-weight-bold mx-2"> | </span>
    <span>{{ title.getName() }}<span>
</div>

{% include 'imax/schedule/include/show_detail.html.twig' with {
    schedule: schedule,
    theaters: theaters,
} only %}

<div class="mb-5 py-5 text-white bg-black">
    {% include 'imax/include/campaign.html.twig' with {
        campaigns: schedule.getTitle().getCampaigns()
    } only %}
</div>

<div class="px-3">
    <div class="back-list button-01 shadow-01 mx-auto mb-5">
        <a href="{{ path_for('imax_schedule_list') }}" class="text-white">一覧へ戻る</a>
    </div>
</div>
{% endblock %}